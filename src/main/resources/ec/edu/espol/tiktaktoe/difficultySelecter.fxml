<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.tiktaktoe.DifficultySelecterController">
    <stylesheets>
        <URL value="@/styles/difficultyselecter.css" />
    </stylesheets>
   <children>
      <VBox prefHeight="200.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="53.0" prefWidth="100.0">
                     <children>
                        <Label text="Username" />
                        <Label fx:id="userName" text="ExampleName" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Games" />
                        <Label fx:id="playedGames" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Wins" />
                        <Label fx:id="winGames" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Rounds" />
                        <Label fx:id="numberRoundsUser" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Rounds Won" />
                        <Label fx:id="roundsWon" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Score" />
                        <Label fx:id="sumScore" text="0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Select Difficulty" />
                        <Button mnemonicParsing="false" onAction="#selectNormalDiff" text="Normal" />
                        <Button mnemonicParsing="false" onAction="#selectHardDiff" text="Hard" />
                        <Button mnemonicParsing="false" onAction="#selectIADiff" text="AI Mastery" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Select Rounds" />
                        <Label fx:id="numberRounds" text="1" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#lessRounds" text="-" />
                              <Button mnemonicParsing="false" onAction="#plusRounds" text="+" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
