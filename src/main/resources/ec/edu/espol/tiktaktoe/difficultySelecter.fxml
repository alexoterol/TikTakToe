<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" stylesheets="@../../../../styles/difficultyselecter.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.tiktaktoe.DifficultySelecterController">
   <children>
      <VBox prefHeight="200.0" prefWidth="600.0" stylesheets="@../../../../styles/difficultyselecter.css">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" stylesheets="@../../../../styles/difficultyselecter.css">
               <children>
                  <VBox prefHeight="53.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label text="Username" />
                        <Label fx:id="userName" stylesheets="@../../../../styles/difficultyselecter.css" text="ExampleName" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label stylesheets="@../../../../styles/difficultyselecter.css" text="Games" />
                        <Label fx:id="playedGames" stylesheets="@../../../../styles/difficultyselecter.css" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label stylesheets="@../../../../styles/difficultyselecter.css" text="Wins" />
                        <Label fx:id="winGames" stylesheets="@../../../../styles/difficultyselecter.css" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label stylesheets="@../../../../styles/difficultyselecter.css" text="Rounds" />
                        <Label fx:id="numberRoundsUser" stylesheets="@../../../../styles/difficultyselecter.css" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label stylesheets="@../../../../styles/difficultyselecter.css" text="Rounds Won" />
                        <Label fx:id="roundsWon" stylesheets="@../../../../styles/difficultyselecter.css" text="0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label stylesheets="@../../../../styles/difficultyselecter.css" text="Score" />
                        <Label fx:id="sumScore" stylesheets="@../../../../styles/difficultyselecter.css" text="0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" stylesheets="@../../../../styles/difficultyselecter.css">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label text="Select Difficulty" />
                        <Button mnemonicParsing="false" onAction="#selectNormalDiff" styleClass="Button" stylesheets="@../../../../styles/difficultyselecter.css" text="Normal" />
                        <Button mnemonicParsing="false" onAction="#selectHardDiff" styleClass="Button" stylesheets="@../../../../styles/difficultyselecter.css" text="Hard" />
                        <Button mnemonicParsing="false" onAction="#selectIADiff" styleClass="Button" stylesheets="@../../../../styles/difficultyselecter.css" text="AI Mastery" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../../../../styles/difficultyselecter.css">
                     <children>
                        <Label text="Select Rounds" />
                        <Label fx:id="numberRounds" text="1" />
                        <HBox prefHeight="100.0" prefWidth="200.0" stylesheets="@../../../../styles/difficultyselecter.css">
                           <children>
                              <Button mnemonicParsing="false" onAction="#lessRounds" stylesheets="@../../../../styles/difficultyselecter.css" text="-">
                                 <styleClass>
                                    <String fx:value="Button" />
                                    <String fx:value="NumberChooser" />
                                 </styleClass></Button>
                              <Button mnemonicParsing="false" onAction="#plusRounds" stylesheets="@../../../../styles/difficultyselecter.css" text="+">
                                 <styleClass>
                                    <String fx:value="Button" />
                                    <String fx:value="NumberChooser" />
                                 </styleClass></Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
