<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="ec.edu.espol.tiktaktoe.RegistrationController">
    <stylesheets>
        <URL value="@/styles/registration.css" />
    </stylesheets>
   <children>
      <VBox prefHeight="200.0" prefWidth="498.0">
         <children>
            <Label text="Register new User" />
            <Label text="Name" />
            <TextField fx:id="nameNewUser" />
            <Label text="Password" />
            <TextField fx:id="passwrdNewUser" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToLogIn" text="Register" />
                  <Button mnemonicParsing="false" onAction="#exitButton" text="Exit" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
